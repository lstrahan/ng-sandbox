{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@shared/*": ["src/app/shared/*"],
      "@models/*": ["src/app/models/*"],
      "environments/*": ["src/environments/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "angularCompilerOptions": {
    "preserveWhiteSpaces": false
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
